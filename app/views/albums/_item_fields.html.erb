<div class="fields fields-wrapper">
  <div class="album-details">
    <h2>PRODUCT SUGGESTION</h2>
  </div>

  <% if f.object.img_url.present?%>
      <%= image_tag f.object.img_url, height: '150' %>
  <% end %>

  <div class="field">
    <%= f.label :item_class, "Category" %>
    <%= f.select :item_class, options_for_select(%W(Tops Bottoms Doodads), selected: f.object.item_class) %> <!-- need to use .object to make f into something accessible -->
  </div>

  <div class="field">
    <%= f.label :img_url, "Product Image Link" %>
    <%= f.url_field :img_url %>
  </div>

  <div class="field">
    <%= f.label :link_url, "Source Link" %>
    <%= f.url_field :link_url %>
  </div>

  <div class="field">
    <%= f.label :name, "Product Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>

  <div class="field">
    <%= f.label :us_price, "US$ Price" %>
    <%= f.text_field :us_price %>
  </div>

  <div class="field">
    <%= f.label :item_type, "Product Type" %>
    <%= f.text_field :item_type %>
  </div>

  <div class="field">
    <%= f.label :defining_color, "Defining Color" %>
    <%= f.text_field :defining_color %>
  </div>

  <div class="field">
    <%= f.label :defining_texture, "Defining Texture" %>
    <%= f.text_field :defining_texture %>
  </div>

  <div class="field">
    <%= f.label :item_desc, "Product Description", class: "description" %>
    <%= f.text_area :item_desc, class: "description" %>
  </div>

  <%= f.link_to_remove "Remove" %>

</div>